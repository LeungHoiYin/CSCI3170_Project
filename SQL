//page 1

DROP TABLE Book;

CREATE TABLE Book(
ISBN			string,
Title			string, 
Authors			string, 
Price			integer, 
InventoryQuantity	integer,
PRIMARY KEY (ISBN)
);

CREATE TABLE Customer(
UID	string, 
Name	string, 
Address	string,
PRIMARY KEY (UID)
);

CREATE TABLE Order(
OID		string, 
UID		string, 
OrderDate	Date, 
OrderISBN	string, 
OrderQuantity	integer, 
ShippingStatus	string,
PRIMARY KEY (OID, OrderISBN)
);

CREATE TABLE cart(
OID		string, 
OrderISBN	string,
UID		string,
PRIMARY KEY (OID, OrderISBN, UID),
FOREIGN KEY (OID) 	REFERENCES Order ,
FOREIGN KEY (OrderISBN) REFERENCES Order ,
FOREIGN KEY (UID) 	REFERENCES Customer 
);

CREATE TABLE package(
OID		string, 
OrderISBN	string,
ISBN		string,
PRIMARY KEY (OID, OrderISBN, ISBN),
FOREIGN KEY (OID) 	REFERENCES Order ,
FOREIGN KEY (OrderISBN) REFERENCES Order ,
FOREIGN KEY (ISBN) 	REFERENCES Book 
);


